<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    tools:context=".ui.UserReportActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/vazir_matn_black"
            android:text="ارسال گزارش"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/report_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/report_types"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/report_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نوع گزارش (پیامک، تماس، سایت، برنامه)"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/report_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="جزئیات"
            android:inputType="textMultiLine"
            android:minHeight="150dp"
            android:paddingBottom="16dp" />


        <Button
            android:id="@+id/attach_file_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="پیوست فایل"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/submit_report_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="ارسال گزارش"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
